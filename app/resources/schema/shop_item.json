{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poketools.gamestuff.info/data/schema/shop_item.json",
  "title": "Shop Item list",
  "description": "Items available for purchase at shops",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "version_group": {
        "title": "Version Group identifier",
        "allOf": [
          {
            "$ref": "types/identifier.json"
          },
          {
            "type": "string",
            "$filters": "versionGroupIdentifier"
          }
        ]
      },
      "location": {
        "title": "Location identifier",
        "allOf": [
          {
            "$ref": "types/identifier.json"
          },
          {
            "type": "string",
            "$filters": [
              "locationIdentifier",
              {
                "$func": "locationInVersionGroup",
                "$vars": {
                  "versionGroup": {
                    "$ref": "1/version_group"
                  }
                }
              }
            ]
          }
        ]
      },
      "area": {
        "title": "Area identifier path",
        "description": "Use \"/\" to specify the tree path.",
        "type": "string",
        "pattern": "^(?:[a-z0-9\\-]+/?)+$"
      },
      "shop": {
        "title": "Shop identifier",
        "$ref": "types/identifier.json"
      },
      "item": {
        "title": "Item identifier",
        "allOf": [
          {
            "$ref": "types/identifier.json"
          },
          {
            "type": "string",
            "$filters": [
              "itemIdentifier",
              {
                "$func": "itemInVersionGroup",
                "$vars": {
                  "versionGroup": {
                    "$ref": "1/version_group"
                  }
                }
              }
            ]
          }
        ]
      },
      "buy": {
        "title": "Purchase price",
        "type": "integer",
        "minimum": 1
      }
    },
    "additionalProperties": false,
    "required": [
      "version_group",
      "location",
      "area",
      "shop",
      "item",
      "buy"
    ]
  }
}
