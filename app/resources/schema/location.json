{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poketools.gamestuff.info/data/schema/location.json",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "region": {
        "$ref": "types/identifier.json"
      },
      "name": {
        "$ref": "types/name.json"
      },
      "description": {
        "$ref": "types/markdown.json"
      },
      "areas": {
        "type": "object",
        "minProperties": 1,
        "additionalProperties": {
          "type": "object",
          "properties": {
            "name": {
              "$ref": "types/name.json"
            },
            "default": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false,
          "required": [
            "name"
          ]
        }
      },
      "super": {
        "$ref": "types/identifier.json"
      },
      "map": {
        "type": "object",
        "properties": {
          "map": {
            "$ref": "types/identifier.json"
          },
          "z": {
            "type": "integer"
          },
          "overlay": {
            "type": "string",
            "contentMediaType": "image/svg+xml"
          }
        },
        "additionalProperties": false,
        "required": [
          "map",
          "overlay"
        ]
      }
    },
    "additionalProperties": false,
    "required": [
      "region",
      "name",
      "areas"
    ]
  }
}
