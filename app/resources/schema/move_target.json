{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poketools.gamestuff.info/data/schema/move_target.json",
  "title": "Move Target list",
  "description": "Describes which battle participants a move affects.",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "identifier": {
        "$ref": "types/identifier.json"
      },
      "name": {
        "$ref": "types/name.json"
      },
      "description": {
        "$ref": "types/markdown.json"
      }
    },
    "additionalProperties": false,
    "required": [
      "identifier",
      "name",
      "description"
    ]
  }
}
