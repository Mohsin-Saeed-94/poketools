{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poketools.gamestuff.info/data/schema/pokemon_habitat.json",
  "title": "Pokemon Habitat list",
  "description": "Pokemon habitat list, used for flavor in some version Pokedexes",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "identifier": {
        "$ref": "types/identifier.json"
      },
      "name": {
        "$ref": "types/name.json"
      },
      "icon": {
        "title": "Icon path",
        "description": "Path relative to `assets/static/habitat`",
        "$ref": "types/asset_path.json"
      }
    },
    "additionalProperties": false,
    "required": [
      "identifier",
      "name",
      "icon"
    ]
  }
}
