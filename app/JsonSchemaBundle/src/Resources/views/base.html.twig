{% import _self as helpers %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="{{ asset('bundles/jsonschema/json-schema-bundle.css') }}">

    <title>{% block title %}Schemas{% endblock %}</title>
</head>
<body>
{# Top bar #}
<div class="navbar navbar-expand-lg jsb--navbar">
</div>

{# Container #}
<div class="container-fluid">
    <div class="row flex-xl-nowrap">
        {# Left sidebar #}
        <div class="col-12 col-md-3 col-xl-2 jsb--sidebar jsb--nav">
            {{ helpers.sidebarNav(schemas|default([])) }}
        </div>

        {# Content #}
        <div class="col jsb--content">
            {% block body %}
            {% endblock %}
        </div>

        {# Right sidebar #}
        <div class="d-none d-xl-block col-xl-2 jsb--sidebar jsb--page-nav">
            {% block nav %}
            {% endblock %}
        </div>
    </div>
</div>

<script src="{{ asset('bundles/jsonschema/json-schema-bundle.js') }}"></script>
</body>
</html>

{% macro sidebarNav(schemas, current = null) %}
    {# /** @var \DragoonBoots\JsonSchemaBundle\Schema\Type\SchemaObject[] schemas **/ #}
    {# /** @var \DragoonBoots\JsonSchemaBundle\Schema\Type\SchemaObject|null current **/ #}
    <nav>
        <h2>Schemas</h2>
        <ul class="nav">
            {% for schema in schemas %}
                <li class="nav-item">
                    <a class="nav-link{% if schema == current %} active{% endif %}"
                       href="{{ path('json_schema_schema_show', {'path': schema.relativeId}) }}">
                        {{ schema.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endmacro %}
