{% extends 'base.html.twig' %}
{% import '_macros/datatable.html.twig' as datatable %}

{% block title %}Abilities - {{ ability.name }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">{{ version }}</li>
            <li class="breadcrumb-item">
                <a href="{{ path('ability_index', {'versionSlug': version.slug}) }}">Abilities</a>
            </li>
            <li class="breadcrumb-item active">{{ ability.name }}</li>
        </ol>
    </nav>

    <h1>{{ ability.name }}</h1>
    <p class="pkt-ability-view-flavortext">{{ ability.flavorText }}</p>

    <h2>Description</h2>
    <p class="pkt-ability-view-description">{{ ability.description|markdown }}</p>

    <h2>Pok√®mon</h2>
    <div class="pkt-pokemon-index-table">
        {{ datatable.datatable(pokemon_table, 'pkt-ability-view-pokemon') }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('ability_view') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('ability_view') }}
{% endblock %}
