<svg xmlns="http://www.w3.org/2000/svg"
     id="svg8"
     version="1.1"
     class="pkt-gauge-linear"
     width="100">
    <g>
        <rect class="pkt-gauge-empty" y="0" x="0" width="100"/>
        {% for percentage in percentages %}
            <rect y="0"
                  x="{{ prev_percentage|default(0) }}"
                  width="{{ percentage }}"
                  class="pkt-gauge-value-{{ loop.index0 }}"/>
            {%- set prev_percentage = percentage %}
        {% endfor %}
    </g>
</svg>
